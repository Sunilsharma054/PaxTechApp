<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.paxtechnology.paxapp.Activity.PrivacyPolicyActivity"
    android:background="@drawable/back_img2">

    <ImageView
        android:id="@+id/term_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_white" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Privacy Policy"
        android:textColor="@color/white"
        android:textSize="@dimen/title_dimens"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/term_close"
        app:layout_constraintStart_toEndOf="@+id/term_close"
        app:layout_constraintTop_toTopOf="@+id/term_close" />

    <androidx.constraintlayout.widget.ConstraintLayout
